<!-- bank-statement-template.html -->

<html>

  <head>
    <style>
      body { font-family: Arial, sans-serif; margin: 2rem; font-size: 0.8rem; }
      h1 { text-align: center; } table { width: 100%; border-collapse: collapse;
      } th, td { border-bottom: 1px solid #ccc; text-align: center; font-size:
      10px; padding-top: 10px; padding-bottom: 10px; } th { background-color:
      #f4f4f4; border-top: 1px solid #ccc; } .totals { font-weight: bold; }
      .footer { margin-top: 30px; font-size: 12px; display: flex; /* Flexbox
      layout */ justify-content: space-between; /* Separate content to left and
      right */ } .footer-left { text-align: left; } .footer-right { text-align:
      right; padding-top: 4rem; margin-top: 1rem; } .footer-icon { width: 20px;
      height: 20px; margin-right: 5px; vertical-align: middle; } .date-range {
      display: flex; justify-content: space-between; } .date-from { text-align:
      left; } .opening-bal { text-align: center; } .date-to { text-align: right;
      } .cell-padding { padding-left: 5px; padding-right: 5px; }
    </style>
  </head>

  <body>
    <h1>Bank Statement</h1>
    <div class="date-range">
      <div class="date-from">
        <p>From Date: {{fromDate}}</p>
      </div>
      <div class="opening-bal">
        <p>Opening Balance: ₹ {{openingBalance}}</p>
      </div>
      <div class="date-to">
        <p>To Date: {{toDate}}</p>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Sr. No.</th>
          <th>Date</th>
          <th class="cell-padding">Title</th>
          <th>A/C Name</th>
          <th class="cell-padding">Credit (₹)</th>
          <th class="cell-padding">Debit (₹)</th>
          <th class="cell-padding">Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each transactions}}
          <tr>
            <td>{{add @index 1}}</td>
            <td>{{date}}</td>
            <td class="cell-padding">{{title}}</td>
            <td>{{accountName}}</td>
            <td class="cell-padding">{{credit}}</td>
            <td class="cell-padding">{{debit}}</td>
            <td class="cell-padding">{{status}}</td>
          </tr>
        {{/each}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td class="totals">Total Credited Amount:</td>
          <td></td>
          <td class="totals">₹ {{totalCredit}}</td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td class="totals">Total Debited Amount:</td>
          <td></td>
          <td class="totals">₹ {{totalDebit}}</td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td class="totals">Current Balance Amount:</td>
          <td></td>
          <td class="totals">₹ {{currentBalance}}</td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <div class="footer">
      <!-- Left side content -->
      <div class="footer-left">
        <h3>Contact Us</h3>
        <p>
          <img
            src="{{locationIconBase64}}"
            alt="Address Icon"
            class="footer-icon"
          />
          Flat no 10 Khushi Appartment Pandharinagar Kharadi Pune-411014
        </p>
        <p>
          <img src="{{mailIconBase64}}" alt="Mobile Icon" class="footer-icon" />
          +91 8446318398
        </p>
        <p>
          <img src="{{phoneIconBase64}}" alt="Email Icon" class="footer-icon" />
          vishalcrikfan07@gmail.com
        </p>
      </div>
      <!-- Right side content -->
      <div class="footer-right">
        <p>Vijay Chaudhari</p>
      </div>
    </div>
  </body>

</html>