<!-- bank-statement-template.html -->

<html>

  <head>
    <style>
      body { font-family: Arial, sans-serif; margin: 2rem; font-size: 0.8rem; }
      h1 { text-align: center; } table { width: 100%; border-collapse: collapse;
      } th, td { border-bottom: 1px solid #ccc; text-align: center; font-size:
      10px; padding-top: 10px; padding-bottom: 10px; } th { background-color:
      #f4f4f4; border-top: 1px solid #ccc; } .totals { font-weight: bold; }
      .footer { margin-top: 30px; font-size: 12px; display: flex; /* Flexbox
      layout */ justify-content: space-between; /* Separate content to left and
      right */ } .footer-left { text-align: left; } .footer-right { text-align:
      right; padding-top: 4rem; margin-top: 1rem; } .footer-icon { width: 20px;
      height: 20px; margin-right: 5px; vertical-align: middle; } .date-range {
      display: flex; justify-content: space-between; } .date-from { text-align:
      left; } .date-to { text-align: right; } .cell-padding { padding-left: 5px;
      padding-right: 5px; } .cell-margin { margin: 0 5px; }
    </style>
  </head>

  <body>
    <h1>Profit and Loss Statement</h1>
    <div class="date-range">
      <div class="date-from">
        <p>From Date: {{fromDate}}</p>
      </div>
      <div class="date-to">
        <p>To Date: {{toDate}}</p>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Sr. No.</th>
          <th class="cell-margin">Date </th>
          <th>Vehicle No.</th>
          <th>From</th>
          <th>To</th>
          <th>Sale Value</th>
          <th>GST</th>
          <th style="max-width: 3rem;">Total (Sale Value + GST)</th>
          <th>Trip Expense</th>
          <th>Profit Per Trip</th>
        </tr>
      </thead>
      <tbody>
        {{#each transactions}}
          <tr>
            <td>{{add @index 1}}</td>
            <td class="cell-margin">{{date}}</td>
            <td>{{vehicleNumber}}</td>
            <td>{{from}}</td>
            <td>{{to}}</td>
            <td>{{saleValue}}</td>
            <td>{{gst}}</td>
            <td>{{total}}</td>
            <td>{{tripExpense}}</td>
            <td>{{profitPerTrip}}</td>
          </tr>
        {{/each}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td class="totals">Total :</td>
          <td class="totals">₹ {{totalSaleValue}}</td>
          <td class="totals">₹ {{totalGST}}</td>
          <td class="totals">₹ {{totalSaleAndGST}}</td>
          <td class="totals">₹ {{totalTripExpense}}</td>
          <td class="totals">₹ {{totalProfitPerTrip}}</td>
        </tr>
      </tbody>
    </table>
  </body>

</html>